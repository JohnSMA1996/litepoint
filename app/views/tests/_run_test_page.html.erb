<!-- app/views/tests/_run_test_page.html.erb -->
<% if files.present? %>
  <%= form_tag tests_path, method: :post do %>
    <label for="file_dropdown">Select a file:</label>
    <%= select_tag 'file', options_for_select(files), id: 'file_dropdown' %>

    <!-- Add input fields for serial number and description -->
    <%= label_tag 'serial_number', 'Serial Number:' %>
    <%= text_field_tag 'serial_number' %>

    <%= label_tag 'description', 'Description:' %>
    <%= select_tag 'description', options_for_select(['D222AH', 'XSR250GK', 'XSR240LKR']) %>

    <%= submit_tag 'Run Test', class: 'btn btn-primary' %>
  <% end %>
<% end %>
